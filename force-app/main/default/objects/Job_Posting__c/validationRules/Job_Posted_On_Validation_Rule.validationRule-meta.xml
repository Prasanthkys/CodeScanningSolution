<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Job_Posted_On_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW(),
Job_Posted_On__c &lt;&gt; TODAY()
)</errorConditionFormula>
    <errorDisplayField>Job_Posted_On__c</errorDisplayField>
    <errorMessage>The Job Posted date must be current date.</errorMessage>
</ValidationRule>
