<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Submitted_On_Date_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW(),
Submitted_On__c &lt;&gt; TODAY()
)</errorConditionFormula>
    <errorDisplayField>Submitted_On__c</errorDisplayField>
    <errorMessage>Select current date</errorMessage>
</ValidationRule>
