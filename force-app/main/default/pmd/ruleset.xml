<?xml version="1.0"?>
<ruleset name="Salesforce Code Quality Ruleset" xmlns="http://pmd.sourceforge.net/ruleset_2_0.dtd">
    <description>
        Ruleset for detecting issues in Salesforce Apex classes, focusing on security and best practices.
    </description>

    <!-- Security Rules -->
    <rule ref="rulesets/apex/security.xml/HardcodedCredentials"/>
    <rule ref="rulesets/apex/security.xml/NoHttpCalloutWithoutHttpCallout"/>
    
    <!-- Best Practices -->
    <rule ref="rulesets/apex/bestpractices.xml/UnusedPrivateMethod"/>
    <rule ref="rulesets/apex/bestpractices.xml/UnusedPrivateField"/>
    <rule ref="rulesets/apex/bestpractices.xml/AvoidGlobalAccessModifiers"/>
    
    <!-- Code Style -->
    <rule ref="rulesets/apex/codesize.xml/ApexClassTooLarge"/>
    
    <!-- Potential Bugs -->
    <rule ref="rulesets/apex/design.xml/MethodShouldReturnBoolean"/>
    <rule ref="rulesets/apex/design.xml/EmptyMethod"/>
</ruleset>